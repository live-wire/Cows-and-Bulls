<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/nokia"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1" android:orientation="vertical">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:orientation="vertical" android:layout_weight="0.85" android:layout_height="47dp" android:weightSum="1">
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_height="6dp" android:layout_weight="0.14">
        <Button android:textSize="30px" android:background="#000000" android:textColor="#ffffff" android:id="@+id/button1" android:text="Play" android:layout_width="0dp" android:layout_gravity="bottom" android:layout_weight="1.00" android:layout_height="wrap_content"></Button>
        <Button android:textSize="30px" android:background="#000000" android:textColor="#ffffff" android:layout_weight="1" android:id="@+id/button2" android:layout_height="wrap_content" android:text="Instructions" android:layout_width="0dp" android:layout_gravity="bottom"></Button>
    </LinearLayout>
</LinearLayout>
